generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  USER
  ADMIN
}

model User {
  id      Int      @id @default(autoincrement())
  name    String?
  email   String   @unique
  image   String?
  role    UserRole     @default(USER)
  password String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  posts    Post[]
}

model Post {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  placeName   String
  address     String
  latitude    Float
  logibtude   Float
  image       String[]
  userId      Int
  user        User     @relation(fields: [userId], references: [id])
  createdAt   DateTime @default(now())
}

